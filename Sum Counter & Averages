count = 0
sum = 0.0

while True:
    sval = input('Enter a number: ')
    if sval == 'done':
        break
    
    try:
        fval = float(sval)
    except:
        print('Invalid Input')
        continue
    
    count = count + 1
    sum = sum + fval

print('Sum:', sum, 'Count:', count, 'Average:', sum / count)
